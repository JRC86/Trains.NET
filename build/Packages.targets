<Project>

  <PropertyGroup>
    <RestoreSources>
      https://api.nuget.org/v3/index.json;
    </RestoreSources>
  </PropertyGroup>
  
  <ItemGroup>

    <!-- Updates - Opt-in per project -->
    
    <PackageReference Update="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8" />

    <!-- DI -->
    <PackageReference Update="Microsoft.Extensions.DependencyInjection" Version="3.1.0" />

    <!-- SkiaSharp -->
    <PackageReference Update="SkiaSharp"                    Version="2.80.1" />
    <PackageReference Update="SkiaSharp.Views.WindowsForms" Version="2.80.1" />
    <PackageReference Update="SkiaSharp.Views.WPF"          Version="2.80.1" />
    
    <!-- Comet 
              <PackageReference Update="Clancey.Comet"                Version="0.2.328-beta" />
              <PackageReference Update="Clancey.Comet.Skia"           Version="0.2.328-beta" />
    -->

    <!-- Includes - for all projects -->
    
    <!-- Latest C# compiler -->
    <PackageReference Include="Microsoft.Net.Compilers.Toolset" Version="3.7.0-4.final">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  
    <!-- Nerdbank GitVresioning -->
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.2.27-beta">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    
  </ItemGroup>
  
</Project>